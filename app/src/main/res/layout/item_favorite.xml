<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Imagem do grafite -->
    <ImageView
        android:id="@+id/imageViewGraffiti"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img2_listview" />

    <!-- Informações do grafite -->
    <TextView
        android:id="@+id/textViewGraffitiTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Graffiti Title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/textViewGraffitiArtist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Artist Name"
        android:textSize="14sp"
        android:textColor="#888888"
        android:layout_marginTop="4dp"/>

    <!-- Descrição do grafite -->
    <TextView
        android:id="@+id/textViewGraffitiDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="14sp"
        android:layout_marginTop="8dp"/>
</LinearLayout>
